<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong p-4" style="border-radius: 1rem;">

<% if @order.errors.any? %> 
    <% @order.errors.full_messages.each do |msg| %> 
        <p><%= msg %> </p>
    <% end %> 
<% end %> 

<div class="container">
<h2 class="fw-bold text-center my-2">Place an order</h2>
    <p><strong>Meal Name: </strong> <%=@meal.title%></p>
    <p><strong>Cook Name: </strong> <%=@meal.user.username%></p>
    <p><strong>Description: </strong> <%=@meal.description%></p>
</div>

<div class="container">
<%= form_with(model:[@meal, @order]) do |form|%>
    <div class="mb-3">
        <%= form.label :recipient, class: "form-label fw-bold"%>
        <br>
        <%= form.text_field :recipient, class: "form-control"%>
    </div>
    <div class="mb-3">
        <%= form.label :address, class: "form-label fw-bold" %>
        <br>
        <%= form.text_area :address, cols: 50, rows: 5, class: "form-control" %>
    </div>
    <div class="d-flex justify-content-center">
    <%= form.submit class: "btn btn-outline-dark mb-3 text-center"%>
    </div>
<% end %>
</div>
</div>
</div>
</div>
</div>